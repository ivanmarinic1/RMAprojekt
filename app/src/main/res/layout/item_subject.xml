<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <ImageView
        android:id="@+id/item_subject_place"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="80dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/item_subject_title1"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:text="Ime predmeta: "
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_subject_place"/>
    <TextView
        android:id="@+id/item_subject_title"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_subject_title1"/>
    <TextView
        android:id="@+id/item_subject_classes1"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        android:text="Broj sati predavanja: "
        app:layout_constraintTop_toBottomOf="@id/item_subject_title"
        app:layout_constraintStart_toEndOf="@id/item_subject_place"/>
    <TextView
        android:id="@+id/item_subject_classes"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_subject_title"
        app:layout_constraintStart_toEndOf="@id/item_subject_classes1"/>
    <TextView
        android:id="@+id/item_subject_placee1"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        android:text="Lokacija: "
        app:layout_constraintTop_toBottomOf="@id/item_subject_classes"
        app:layout_constraintStart_toEndOf="@id/item_subject_place"/>
    <TextView
        android:id="@+id/item_subject_placee"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_subject_classes"
        app:layout_constraintStart_toEndOf="@id/item_subject_placee1"/>

</androidx.constraintlayout.widget.ConstraintLayout>